{
  "path": ".freeCodeCamp",
  "scripts": {
    "develop-course": "cp sample.env .env && source ./tooling/.bashrc && npm ci && npm run develop",
    "run-course": "npm run start",
    "test": {
      "functionName": "handleMessage",
      "arguments": [
        {
          "message": "Hello World!",
          "type": "info"
        }
      ]
    }
  },
  "workspace": {
    "previews": [
      {
        "open": true,
        "url": "http://localhost:8080",
        "timeout": 4000
      }
    ],
    "terminals": [
      {
        "name": "JavaScript",
        "directory": ".",
        "show": true,
        "message": "'Use me to run your code'"
      }
    ]
  }
}
